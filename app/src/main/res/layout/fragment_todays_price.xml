<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/light_background">



    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayPrice_eco_center_id_title"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/s_todays_price_economic_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buyitembackground"
            android:spinnerMode="dropdown"
            android:id="@+id/todayPrice_eco_center_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/todayPrice_maincat_id_title"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="@string/s_todays_price_maincat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Spinner
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buyitembackground"
            android:spinnerMode="dropdown"
            android:id="@+id/todayPrice_maincat_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>


    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/todayPrice_alldata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>













</LinearLayout>