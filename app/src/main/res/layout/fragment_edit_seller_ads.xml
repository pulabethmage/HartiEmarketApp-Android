<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editadsbyseller.EditSellerAds"
    android:clickable="false"
    android:background="@drawable/add_adverticment_background"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:textColor="@color/colorWhite"
        android:id="@+id/edit_application_title"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/s_ad_applicationform_title"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/edit_application_maincat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedwhitebackground"
                android:hint="@string/s_ad_applicationform_type"
                android:padding="10dp"
                android:textSize="15sp"
                android:enabled="false"/>

            <EditText
                android:id="@+id/edit_application_subcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundedwhitebackground"
                android:hint="@string/s_ad_applicationform_type"
                android:padding="10dp"
                android:textSize="15sp"
                android:enabled="false"/>


            <TextView
                android:id="@+id/edit_application_type_title"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edit_application_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/roundedwhitebackground"
                android:hint="@string/s_ad_applicationform_type"
                android:padding="10dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edit_application_unitprice_title"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15sp"
                android:inputType="numberDecimal"
                android:id="@+id/edit_application_unitprice"
                android:hint="@string/s_ad_applicationform_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/edit_application_total_qty_title"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_total_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textSize="15sp"
                    android:inputType="number"
                    android:id="@+id/edit_application_total_qty"
                    android:hint="@string/s_ad_applicationform_total_qty"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedwhitebackground"
                    android:padding="10dp" />

                <EditText
                    android:enabled="false"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/roundedwhitebackground"
                    android:id="@+id/edit_application_units"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <TextView
                android:id="@+id/edit_application_sellingplace_title"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_selling_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/edit_application_sellingplace"
                android:hint="@string/s_ad_applicationform_selling_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>


            <LinearLayout

                android:layout_marginTop="10dp"
                android:background="@drawable/roundedwhitebackground"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edit_application_expiridate_title"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="@string/s_ad_applicationform_expirationdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <DatePicker
                    android:layout_marginTop="5dp"
                    android:id="@+id/edit_application_expiridate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"/>

            </LinearLayout>


            <Button
                android:id="@+id/edit_application_submit"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/dark_button_background"
                android:text="@string/s_ad_applicationform_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>


    </ScrollView>




</LinearLayout>