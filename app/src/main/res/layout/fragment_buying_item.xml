<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buyingItems.BuyingItemFragment"
    android:clickable="false"
    android:background="@drawable/buyingbackground"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:textColor="@color/colorGray"
        android:id="@+id/buy_order_title"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/s_ad_applicationform_title"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:id="@+id/buy_order_type_text"
                android:text="@string/s_ad_applicationform_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

                <EditText
                    android:enabled="false"
                    android:textSize="15sp"
                    android:id="@+id/buy_order_type"
                    android:hint="@string/s_ad_applicationform_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedwhitebackground"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/buy_order_unitprice_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:enabled="false"
                android:textSize="15sp"
                android:inputType="numberDecimal"
                android:id="@+id/buy_order_unitprice"
                android:hint="@string/s_ad_applicationform_unit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/buy_application_total_qty_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_total_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:enabled="false"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:id="@+id/buy_application_total_qty"
                    android:hint="@string/s_ad_applicationform_total_qty"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedwhitebackground"
                    android:padding="10dp" />

                <EditText
                    android:enabled="false"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:background="@drawable/roundedwhitebackground"
                    android:id="@+id/buy_order_units"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="Kg"/>


            </LinearLayout>

            <TextView
                android:id="@+id/buy_order_district_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_selling_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="15sp"
                android:id="@+id/buy_order_district"
                android:hint="@string/s_ad_applicationform_selling_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/buy_order_govicenter_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_selling_govicenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:textSize="15sp"
                android:id="@+id/buy_order_govicenter"
                android:hint="@string/s_ad_applicationform_selling_govicenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/buy_order_sellingplace_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_selling_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:enabled="false"
                android:textSize="15sp"
                android:id="@+id/buy_order_sellingplace"
                android:hint="@string/s_ad_applicationform_selling_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/buy_order_sellername_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:enabled="false"
                android:textSize="15sp"
                android:id="@+id/buy_order_sellername"
                android:hint="@string/s_ad_applicationform_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/buy_order_phonenumber_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_selling_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textSize="15sp"
                android:id="@+id/buy_order_phonenumber"
                android:hint="@string/s_ad_applicationform_selling_phoneno"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:enabled="false"/>

            <ImageView
                android:id="@+id/buy_phonebutton"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/callgreenroundedback"
                android:layout_gravity="center"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>

            <TextView
                android:id="@+id/buy_order_expirationdate_text"
                android:layout_marginTop="10dp"
                android:text="@string/s_ad_applicationform_expirationdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:textSize="15sp"
                android:id="@+id/buy_order_expirationdate"
                android:hint="@string/s_ad_applicationform_expirationdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedwhitebackground"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:enabled="false"/>

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="220dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/buy_order_image01_linear01"
                            android:gravity="center"

                            android:orientation="vertical"
                            android:layout_width="220dp"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/buy_order_image01"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_menu_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                app:civ_border_width="5dp"
                                app:civ_border_color="#FFFFFF"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buy_order_image02_linear02"

                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="220dp"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/buy_order_image02"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_menu_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                app:civ_border_width="5dp"
                                app:civ_border_color="#FFFFFF"/>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/buy_order_image03_linear03"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="220dp"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/buy_order_image03"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_menu_camera"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                app:civ_border_width="5dp"
                                app:civ_border_color="#FFFFFF"/>


                        </LinearLayout>




                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>





</LinearLayout>