<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_background"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:clickable="false"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/edit_background_rounded"
            android:layout_gravity="right"
            android:text="Edit"
            android:layout_width="70dp"
            android:layout_height="30dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image01"
            android:gravity="center"
            android:src="@drawable/profilepicture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="5dp"
            app:civ_border_color="#FFFFFF"/>

    </LinearLayout>




    <ScrollView
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:id="@+id/yourprofile_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/s_register_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:enabled="false"
        android:id="@+id/profile_name"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="@string/s_register_name"
        android:background="@drawable/edittext_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/yourprofile_gender"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/s_register_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:enabled="false"
        android:id="@+id/profile_gender"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="@string/s_register_gender"
        android:background="@drawable/edittext_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/yourprofile_address"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/s_register_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:enabled="false"
        android:id="@+id/profile_address"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="@string/s_register_address"
        android:background="@drawable/edittext_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/yourprofile_mobile"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/s_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:enabled="false"
        android:id="@+id/profile_phone"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="@string/s_register_phone"
        android:background="@drawable/edittext_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yourprofile_district"
                android:textSize="12sp"
                android:text="@string/s_register_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:background="@drawable/buyitembackground"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:id="@+id/s_profile_reg_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background"
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yourprofile_govicenter"
                android:textSize="12sp"
                android:text="@string/s_register_govicenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Spinner
                android:background="@drawable/buyitembackground"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:id="@+id/s_profile_reg_govicenter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>
    </ScrollView>



</LinearLayout>